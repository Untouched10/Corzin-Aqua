  <!-- Optional FAQ Schema (kept short + valid) -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Does it remove TDS from water?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "No. Corzin is a salt-free conditioner, not an RO. It reduces hardness minerals’ tendency to form scale while retaining minerals and avoiding water wastage."
          }
        },
        {
          "@type": "Question",
          "name": "Is it suitable for borewell water?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes. Corzin is designed for high-hardness borewell and tanker water. A free water test helps choose the right model."
          }
        },
        {
          "@type": "Question",
          "name": "Does it require electricity?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "No. Corzin works without electricity."
          }
        }
      ]
    }
  </script>

  <script>
    (function () {
      const root = document.getElementById('czx-corzin-home');
      if (!root) return;

      const qs = (sel, ctx = root) => ctx.querySelector(sel);
      const qsa = (sel, ctx = root) => Array.from(ctx.querySelectorAll(sel));

      /* ---------------------------
         Mobile drawer
      --------------------------- */
      const toggle = qs('[data-czx-toggle]');
      const drawer = qs('[data-czx-drawer]');
      const overlay = qs('[data-czx-overlay]');

      const setDrawer = (open) => {
        if (!toggle || !drawer || !overlay) return;
        toggle.setAttribute('aria-expanded', open ? 'true' : 'false');
        drawer.classList.toggle('is-open', open);
        overlay.classList.toggle('is-open', open);
        drawer.setAttribute('aria-hidden', open ? 'false' : 'true');
        overlay.setAttribute('aria-hidden', open ? 'false' : 'true');

        // Prevent background scroll only when drawer is open
        document.documentElement.style.overflow = open ? 'hidden' : '';
      };

      if (toggle && drawer && overlay) {
        toggle.addEventListener('click', () => {
          const isOpen = toggle.getAttribute('aria-expanded') === 'true';
          setDrawer(!isOpen);
        });

        overlay.addEventListener('click', () => setDrawer(false));

        qsa('.czx-mobile-drawer a').forEach(a => {
          a.addEventListener('click', () => setDrawer(false));
        });

        window.addEventListener('keydown', (e) => {
          if (e.key === 'Escape') setDrawer(false);
        });
      }

      /* ---------------------------
         Smooth scroll for internal links
      --------------------------- */
      root.addEventListener('click', (e) => {
        const a = e.target.closest('a[href^="#czx-"]');
        if (!a) return;

        const id = a.getAttribute('href');
        const target = document.querySelector(id);
        if (!target) return;

        e.preventDefault();
        setDrawer(false);
        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
      });

      /* ---------------------------
         Reveal animations (IntersectionObserver)
      --------------------------- */
      const revealEls = qsa('.czx-reveal');
      if ('IntersectionObserver' in window && revealEls.length) {
        const io = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('is-visible');
              io.unobserve(entry.target);
            }
          });
        }, { threshold: 0.12 });

        revealEls.forEach(el => io.observe(el));
      } else {
        revealEls.forEach(el => el.classList.add('is-visible'));
      }

      /* ---------------------------
         Stepper logic + autoplay
      --------------------------- */
      const steps = qsa('[data-czx-step]');
      const stepImage = qs('[data-czx-step-image]');
      let stepIndex = 0;
      let stepTimer = null;

      const activateStep = (index, userAction = false) => {
        if (!steps.length || !stepImage) return;

        const safeIndex = ((index % steps.length) + steps.length) % steps.length;
        stepIndex = safeIndex;

        steps.forEach((btn, i) => btn.classList.toggle('is-active', i === safeIndex));

        const img = steps[safeIndex].getAttribute('data-czx-img');
        if (img) {
          stepImage.style.opacity = '0.45';
          window.setTimeout(() => {
            stepImage.src = img;
            stepImage.alt = 'How Corzin works - Step ' + (safeIndex + 1);
            stepImage.style.opacity = '1';
          }, 160);
        }

        if (userAction) restartStepper();
      };

      const startStepper = () => {
        if (!steps.length) return;
        stepTimer = window.setInterval(() => activateStep(stepIndex + 1, false), 5000);
      };

      const stopStepper = () => {
        if (stepTimer) window.clearInterval(stepTimer);
        stepTimer = null;
      };

      const restartStepper = () => {
        stopStepper();
        startStepper();
      };

      steps.forEach((btn, i) => {
        btn.addEventListener('click', () => activateStep(i, true));
      });

      // init
      activateStep(0, false);
      startStepper();

      /* ---------------------------
         Testimonials slider (buttons + swipe)
      --------------------------- */
      const track = qs('[data-czx-track]');
      const slides = qsa('[data-czx-slide]');
      const prev = qs('[data-czx-prev]');
      const next = qs('[data-czx-next]');
      const frame = qs('[data-czx-slider-frame]');
      let slideIndex = 0;
      let slideTimer = null;

      const updateSlider = () => {
        if (!track || !slides.length) return;
        track.style.transform = `translateX(-${slideIndex * 100}%)`;
      };

      const go = (dir) => {
        slideIndex = (slideIndex + dir + slides.length) % slides.length;
        updateSlider();
        restartSlider();
      };

      const startSlider = () => {
        if (!slides.length) return;
        slideTimer = window.setInterval(() => go(1), 6500);
      };

      const stopSlider = () => {
        if (slideTimer) window.clearInterval(slideTimer);
        slideTimer = null;
      };

      const restartSlider = () => {
        stopSlider();
        startSlider();
      };

      if (prev) prev.addEventListener('click', () => go(-1));
      if (next) next.addEventListener('click', () => go(1));

      // Swipe support
      if (frame) {
        let startX = 0;
        let currentX = 0;
        let dragging = false;

        frame.addEventListener('touchstart', (e) => {
          dragging = true;
          startX = e.touches[0].clientX;
          currentX = startX;
          stopSlider();
        }, { passive: true });

        frame.addEventListener('touchmove', (e) => {
          if (!dragging) return;
          currentX = e.touches[0].clientX;
        }, { passive: true });

        frame.addEventListener('touchend', () => {
          if (!dragging) return;
          dragging = false;
          const dx = currentX - startX;
          if (Math.abs(dx) > 45) go(dx > 0 ? -1 : 1);
          else restartSlider();
        });
      }

      updateSlider();
      startSlider();

      /* ---------------------------
         Sticky mobile bar show after scroll
      --------------------------- */
      const sticky = qs('[data-czx-stickybar]');
      const handleSticky = () => {
        if (!sticky) return;
        const isMobile = window.matchMedia('(max-width: 767px)').matches;
        if (!isMobile) return;

        const y = window.scrollY || document.documentElement.scrollTop || 0;
        sticky.classList.toggle('is-visible', y > 420);
      };

      window.addEventListener('scroll', handleSticky, { passive: true });
      window.addEventListener('resize', handleSticky);
      handleSticky();

      /* ---------------------------
         Forms: simple UX (no page reload)
      --------------------------- */
      const showNote = (noteEl) => {
        if (!noteEl) return;
        noteEl.classList.add('is-show');
        window.setTimeout(() => noteEl.classList.remove('is-show'), 4500);
      };

      root.addEventListener('submit', (e) => {
        const leadForm = e.target.closest('[data-czx-lead-form]');
        const miniForm = e.target.closest('[data-czx-mini-form]');
        if (!leadForm && !miniForm) return;

        e.preventDefault();

        if (leadForm) {
          const note = qs('[data-czx-form-note]', leadForm);
          showNote(note);
          leadForm.reset();
        }

        if (miniForm) {
          const note = qs('[data-czx-mini-note]', miniForm);
          showNote(note);
          miniForm.reset();
        }
      });

      /* ---------------------------
         FAQ: keep only one open (optional)
      --------------------------- */
      const faqs = qsa('details.czx-faq');
      faqs.forEach((d) => {
        d.addEventListener('toggle', () => {
          if (!d.open) return;
          faqs.forEach((other) => {
            if (other !== d) other.open = false;
          });
        });
      });
    })();
    
  </script>
</div>
