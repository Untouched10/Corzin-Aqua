    <!-- FAQ -->
    <section id="czx-faq" class="czx-section czx-section--soft czx-dot">
      <div class="czx-container">
        <div class="czx-reveal" style="text-align:center;">
          <h2 class="czx-title">Frequently Asked Questions</h2>
          <p class="czx-kicker">Clear answers for borewell, tanker, and municipal water users.</p>
